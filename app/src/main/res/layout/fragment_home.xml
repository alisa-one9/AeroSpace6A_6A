<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/sky_blue010"
    >
    <Button
        android:id="@+id/raspisanie"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="Перейти к моему расписанию"
        style="@style/ButtonLake"
        >

    </Button>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/austonaut">
    </ImageView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_1"
        android:layout_width="380dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Написать пожелание космонавту перед полётом:"
        android:textSize="20sp"
        app:cornerRadius="25dp">
    </com.google.android.material.button.MaterialButton>

    <EditText
        android:id="@+id/ramka_1"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:background="#4CC7FF"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:paddingBottom="18dp"
        android:paddingLeft="6dp"
        android:inputType="text"
        android:visibility="invisible">

    </EditText>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_2"
        android:layout_width="380dp"
        android:layout_height="68dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Отправить письмо"
        app:cornerRadius="25dp"
        android:visibility="invisible"
        >
    </com.google.android.material.button.MaterialButton>

</LinearLayout>